<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500;600&family=Ubuntu:wght@500&display=swap"
        rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.1/css/bootstrap.min.css"
        integrity="sha512-T584yQ/tdRR5QwOpfvDfVQUidzfgc2339Lc8uBDtcp/wYu80d7jwBgAxbyMh0a9YM9F8N3tdErpFI8iaGx6x5g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="coursereg.css">
    <title>Admin</title>
</head>

<body>
    <div class="container1">
        <!-- navigation bar starts -->
    <div style="position: fixed;">
        <nav>
            <ul>
                <li>
                    <a href="#" class="logo">
                        <span class="nav-item">Welcome<br><%=massage%></span>
                    </a>
                </li>
                <li>
                    <a class="mar hov" href="/adminpage_home">
                        <i class="fas fa-home"></i>
                        <span class="nav-item">Home</span>
                    </a>
                </li>
                <li class="active">
                    <a class="hov" href="/adminpage_course">
                        <i class="fas fa-book"></i>
                        <span class="nav-item">Courses</span>
                    </a>
                </li>
                <li>
                    <a class="hov" href="adminpage_addcourse">
                        <i class="fas fa-file-circle-plus"></i>
                        <span class="nav-item">Add Course</span>
                    </a>
                </li>
                <li>
                    <a class="hov" href="adminpage_searchcourse">
                        <i class="fas fa-copy"></i>
                        <span class="nav-item">Update Course</span>
                    </a>
                </li>
                <li>
                    <a class="hov" href="adminpage_student">
                        <i class="fas fa-graduation-cap"></i>
                        <span class="nav-item">Students</span>
                    </a>
                </li>
              
                <li>
                    <a class="hov" href="/adminpage_changepassword">
                        <i class="fas fa-key"></i>
                        <span class="nav-item">Change Password</span>
                    </a>
                </li>
                <li>
                    <a class="hov" href="/home">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-item">Logout</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
        <!-- navigation bar ends -->
        <div class="cont">
            <% for (var i=0; i <result.length; i++ ) { %>
                <div class="con">
                    <div class="img">
                        <%var str="uploads/" +result[i].course_image%>
                            <img src=<%=str%> alt="">
                    </div>
                    <din class="desc">
                        <a class="anc" href="#">
                            <h3>
                                <%=result[i].course_name.toUpperCase()%>(<%=result[i].course_id%>)
                            </h3>
                        </a>
                        <h2><i class="fa-solid fa-indian-rupee-sign"></i>
                            <%=result[i].course_fees%>
                        </h2>
                        <p>
                            <%=result[i].course_desc%>
                        </p>
                    </din>
                </div>
                <% } %>
        </div>
        <!-- body section ends -->









    </div>
</body>

</html>