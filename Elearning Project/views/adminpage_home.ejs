<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
     <!-- Font Awesome -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />

      <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500;600&family=Ubuntu:wght@500&display=swap"
        rel="stylesheet" />
    
    <link rel="stylesheet" href="coursereg.css">
    <link rel="stylesheet" href="adminhome.css">
    <title>Admin</title>
</head>
<body>
    <div class="container">
        <!-- navigation bar starts -->
        <nav>
            <ul>
                <li>
                    <a href="#" class="logo">
                        <span class="nav-item">Welcome<br><%=massage%></span>
                    </a>
                </li>
                <li class="active">
                    <a class="mar hov" href="/adminpage_home">
                        <i class="fas fa-home"></i>
                        <span class="nav-item">Home</span>
                    </a>
                </li>
                <li >
                    <a class="hov" href="/adminpage_course">
                        <i class="fas fa-book"></i>
                        <span class="nav-item">Courses</span>
                    </a>
                </li>
                <li >
                    <a class="hov" href="/adminpage_addcourse">
                        <i class="fas fa-file-circle-plus"></i>
                        <span class="nav-item">Add Course</span>
                    </a>
                </li>
                <li>
                    <a class="hov" href="adminpage_searchcourse">
                        <i class="fas fa-copy"></i>
                        <span class="nav-item">Update Course</span>
                    </a>
                </li>
                <li >
                    <a class="hov" href="/adminpage_student">
                        <i class="fas fa-graduation-cap"></i>
                        <span class="nav-item">Students</span>
                    </a>
                </li>
               
                <li>
                    <a class="hov" href="/adminpage_changepassword">
                        <i class="fas fa-key"></i>
                        <span class="nav-item">Change Password</span>
                    </a>
                </li>
                <li>
                    <a class="hov" href="/home">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-item">Logout</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="cp">
        <div class="ht1">
             <h2>Total Number Of Students</h2>
             <h1 style="padding-top: .4rem;"><%=result[0][0].c1%></h1>
        </div>
        <div class="ht2">
             <h2>Total Number Of Courses</h2>
             <h1 style="padding-top: .4rem;"><%=result[1][0].c2%></h1>
        </div>
        <div class="ht3">
             <h2>Total Number of Quizes</h2>
             <h1 style="padding-top: .4rem;"><%=result[2][0].c3%></h1>
        </div>
    </div>
    <div class="table-menu" style="top: 15rem; left : 25rem">
        <table>
            <tr>
                <th>Sr.</th>
                <th>Course Id</th>
                <th>Course Name</th>
                <th>No. of Quizes</th>
                <th>No. of Students</th>
            </tr>
            <% for (var i =0; i <result[3].length;  i++ ) { %>
            <tr>
                <td><%=(i+1)%></td>
                <td><%=result[3][i].course_id%></td>
                <td><%=result[3][i].course_name%></td>
                <td><%=result[3][i].count1%></td>
                <td><%=result[3][i].count2%></td>
            </tr>
            <% } %>
        </table>
    </div>
<script>
     if ( window.history.replaceState ) {
  window.history.replaceState( null, null, window.location.href );
}
</script>
</body>
</html>